<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:padding="10dp">

    <EditText
        android:id="@+id/main_edtLogin"
        android:layout_width="match_parent"
        android:hint="Digite o login(email)"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/main_edtSenha"
        android:layout_width="match_parent"
        android:hint="Digite sua senha"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="100">
        <Button
            android:id="@+id/main_btnSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_marginRight="10dp"
            android:text="Sair"/>
        <Button
            android:id="@+id/main_btnEntrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_marginLeft="10dp"
            android:text="Entrar"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Não é cadastrado?"/>
    <Button
        android:id="@+id/main_btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastre-se"/>

    <Button
        android:id="@+id/main_btnBackupBanco"
        android:layout_width="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_height="wrap_content"
        android:text="Backup"/>


</LinearLayout>
